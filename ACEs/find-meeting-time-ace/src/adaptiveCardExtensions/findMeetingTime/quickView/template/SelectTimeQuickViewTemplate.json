{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.5",
	"body": [
		{
			"type": "TextBlock",
			"weight": "Bolder",
			"text": "${title}"
		},
		{
			"type": "ColumnSet",
			"columns": [
				{
					"type": "Column",
					"items": [
						{
							"type": "TextBlock",
							"weight": "Bolder",
							"text": "${subTitle}",
							"wrap": true
						}
					],
					"width": "stretch"
				}
			]
		},
		{
			"type": "Container",
			"items": [
				{
					"type": "TextBlock",
					"text": "${noMeetingTimeFound}",
					"wrap": true
				}
			],
			"isVisible": "${empty($root.meetingTimes)}"
		},
		{
			"type": "ColumnSet",
			"$data": "${meetingTimes}",
			"isVisible": "${greater(count($root.meetingTimes), 0)}",
			"columns": [
				{
					"type": "Column",
					"width": "5px",
					"style": "warning"
				},
				{
					"type": "Column",
					"items": [
						{
							"type": "Container",
							"items": [
								{
									"type": "TextBlock",
									"text": "${formatDateTime(meetingTimeSlot.start.dateTime, 'dd/MM/yyyy')}",
									"wrap": true,
									"weight": "Bolder"
								},
								{
									"type": "TextBlock",
									"text": "${formatDateTime(meetingTimeSlot.start.dateTime, 'HH:mm')} - ${formatDateTime(meetingTimeSlot.end.dateTime, 'HH:mm')}",
									"wrap": true
								}
							]
						}
					],
					"width": "stretch"
				},
				{
					"type": "Column",
					"items": [
						{
							"type": "Image",
							"url": "data:image/png;base64,",
							"selectAction": {
								"type": "Action.Submit",
								"title": "Add to calendar",
								"id": "addToCalendar",
								"data": {
									"itemIndex": "${$index}"
								}
							}
						}
					],
					"width": "auto",
					"verticalContentAlignment": "Center"
				}
			]
		}
	]
}
