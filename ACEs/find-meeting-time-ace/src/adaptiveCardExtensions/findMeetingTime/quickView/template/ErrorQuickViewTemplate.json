{
	"schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.5",
	"body": [
		{
			"type": "TextBlock",
			"weight": "Bolder",
			"text": "${title}",
			"horizontalAlignment": "Center"
		},
		{
			"type": "ColumnSet",
			"columns": [
				{
					"type": "Column",
					"items": [
						{
							"type": "Image",
							"url": "${imageUrl}",
							"horizontalAlignment": "Center"
						}
					]
				}
			]
		},
		{
			"type": "TextBlock",
			"text": "${description}",
			"wrap": true
		}
	],
	"actions": [
		{
			"type": "Action.Submit",
			"id": "close",
			"title": "Close"
		}
	]
}